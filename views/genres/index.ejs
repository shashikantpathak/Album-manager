<head>
        <link rel="stylesheet" href="../css/songslist.css">
        <link rel="stylesheet" href="../css/footer.css">
    
        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
            integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    </head>
    
    <body>
        <% include ../partials/header.ejs %>
        <div class="container">
            <div class="row" style="margin-left:30px;margin-top:30px">
                <div class="col-sm-4">

                        <form class="form-inline text-center" method="post" action="/genres/index">
                            <label class="sr-only" for="inlineFormInputGroupUsername2">Genre</label>
                            <div class="input-group mb-2 mr-sm-2">
                                <input type="text" class="form-control" name="genre" id="inlineFormInputGroupUsername2" placeholder="Genre">
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Submit</button>
                        </form>

                </div>
                <div class="col-sm-6">
                    <div class="list-group float-right" style="width:50%">

                        <% for(var i=0;i<genres.length;i++){%>
                        <span class="list-group-item list-group-item-action">
                            <span> <%=genres[i].genre%> </span>
                            <span class="float-right">
                                <i  data-id="<%= genres[i].id %>" class="fa fa-trash-o delete-genres" aria-hidden="true"></i>
                            </span>
                        </span>
                        <%}%>
                        <a href="/albums/index"> <button class="btn btn-secondary" style="margin-top:30px;">Go Back
                            </button></a>
                    </div>
                    
                </div>
            </div>
        </div>



<script src="https://bootswatch.com/_vendor/jquery/dist/jquery.min.js"></script>
    <script src="https://bootswatch.com/_assets/js/custom.js"></script>
    <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
</body>


